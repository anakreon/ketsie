<% if likeable_reference %>
	<%= link_to get_like_text(), "posts/like/"+post.id.to_s, remote: true, :class => "a_likeLink", :id => "a_likeLink_"+post.id.to_s %>  
<% else %>
	<%= link_to get_unlike_text(), "posts/like/"+post.id.to_s, remote: true, :class => "a_likeLink", :id => "a_likeLink_"+post.id.to_s %>
<% end %>