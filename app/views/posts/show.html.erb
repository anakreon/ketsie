<p>
  <strong>User_ID:</strong>
  <%= @post.user_id %>
</p>

<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>

<% if(@post.user_id != current_user.id)%>
	<h2>Comments</h2>
	<%= render @post.comments %>

	<h2>Add a comment:</h2>
	<%= render "comments/form" %>
<% end %>


<%= link_to 'Back', posts_path %>
| <%= link_to 'Edit', edit_post_path(@post) %>