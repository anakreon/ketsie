<p>
  <strong>Avatar:</strong>
  <% @user_info = @post.user.user_info %>
  <%= render "user_infos/show_avatar" %>
</p>

<p>
  <strong>User_ID:</strong>
  <%= @post.user_id %>
</p>

<p>
  <strong>Text:</strong>
  <%= raw @post.text %>
</p>

<% if @post.images %>
	<% @images = @post.images %>
    <%= render "images/images_show" %>
  <% end %>

	<h2>Comments</h2>
	<%= render @post.comments %>

	<h2>Add a comment:</h2>
	<%= render "comments/form" %>


<%= link_to 'Back', posts_path %>
| <%= link_to 'Edit', edit_post_path(@post) %>