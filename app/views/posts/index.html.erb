<%= (t 'posts.wall', scope: :custom) %>:<br />
---------

<table id='table_posts_list'>
  <thead>
    <tr>
    </tr>
  </thead>

  <tbody>  	
    <% @posts.each do |post| %>
      <tr>      	
      	<td><% @user_info = post.user.user_info %>
      		<%= render "user_infos/show_avatar" %> </td>
      	<td><%= post.user.screenname %> </td>
      	<td><%= post.updated_at %></td>
        <td class='wide'>
        <%= raw post.text %>        	
        </td>
        <% @post = post %>
        <td class>
        	<% if post.images %> 
        		<% @images = post.images %> 
        		
        		<%= render "images/images_show" %>
        		
        	<% end %></td>
        
        <% @liked_by_reference = @liked_by[post.id] %>	
        <%= render "liked_by" %>
       
        <% @likeable_reference = @likeable[post.id] %>       
        <%= render "likeable" %>
        
        <%= render "post_edit_menu" %>
        
		<td><%= (t 'posts.comments', scope: :custom) %></td>
		<td>
		<%= render post.comments %>
		</td>	 

      </tr>
    <% end %>
    
  </tbody>
</table>
