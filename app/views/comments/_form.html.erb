<%= form_for([post, post.comments.build], namespace: 'post'+post.id.to_s) do |f| %>
  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id, :value => current_user.id, disabled: 'disabled'  %>
  </p>
  <p>
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>